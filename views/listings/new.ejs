<%- layout("/layouts/boilerplate") %>

<div class="container">
  <div class="row justify-content-center mb-4">
    <div class="col-lg-8">
      <h3 class="mb-4">Create a New Listing</h3>
      <form
        method="POST"
        action="/listings"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            name="listing[title]"
            class="form-control"
            placeholder="Provide your title"
            required
          />
          <div class="invalid-feedback">Provide a title!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            placeholder="Enter a short description"
            required
          ></textarea>
          <div class="invalid-feedback">Enter a short description!</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            name="listing[image][url]"
            class="form-control"
            required
          />
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              name="listing[price]"
              class="form-control"
              placeholder="Enter your pricing"
              required
            />
            <div class="invalid-feedback">Provide the price!</div>
          </div>

          <div class="col-md-8 mb-3">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="listing[country]"
              class="form-control"
              placeholder="Enter the country name"
              required
            />
            <div class="invalid-feedback">Provide the country name!</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="Enter your location"
            required
          />
          <div class="invalid-feedback">Provide the location!</div>
        </div>

        <div class="mb-4">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" name="listing[category]" required>
            <option value="">Select a category</option>
            <option value="Beach">Beach</option>
            <option value="Mountain">Mountain</option>
            <option value="Forest">Forest</option>
            <option value="Room">Room</option>
          </select>
        </div>

        <button type="submit" class="btn btn-dark px-4 py-2">
          Add Listing
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  // Enable Bootstrap validation styles
  (() => {
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
