<style>
  /* Disable card hover effect on cart page */
  .cart-page .card:hover {
    transform: none !important;
    box-shadow: none !important;
  }

  /* Make cards smaller */
  .cart-page .card {
    max-width: 220px;
    min-width: 180px;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Set a default size for images */
  .cart-page .card-img-top {
    width: 100%;
    height: 140px;
    object-fit: cover;
    border-top-left-radius: 12px;
    border-top-right-radius: 12px;
  }

  .cart-page .card-body {
    padding: 0.8rem 1rem;
    display: flex;
    flex-direction: column;
    flex: 1 1 auto;
  }

  .cart-page .card-body form {
    margin-top: 0; /* Remove auto so spacing is controlled by margin-bottom above */
    margin-bottom: 10px;
  }

  .cart-page .row {
    row-gap: 8px;
    column-gap: 0px;
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
  }

  .cart-page .card-title {
    min-height: 2.5em; /* Adjust as needed for your font-size */
    display: block;
  }

  .cart-page .card-text {
    min-height: 4.5em; /* Ensures space for price, location, country */
    display: block;
    margin-bottom: 28px; /* Add space below the info */
  }
</style>
<%- layout("/layouts/boilerplate") %>
<div class="container mt-4 cart-page">
  <h2>Your Cart</h2>
  <% if (cartListings && cartListings.length > 0) { %>
  <div class="row g-0 justify-content-start">
    <% cartListings.forEach(listing => { %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-2 d-flex">
      <div class="card h-100 w-100">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="<%= listing.title %>"
        />
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            <strong>Price:</strong> â‚¹<%= listing.price.toLocaleString("en-IN")
            %> per night<br />
            <strong>Location:</strong> <%= listing.location %><br />
            <strong>Country:</strong> <%= listing.country %>
          </p>
          <div
            class="d-flex justify-content-between align-items-end mt-auto"
            style="gap: 8px"
          >
            <a
              href="/checkout"
              target="_blank"
              class="btn btn-success"
              >Rent</a
            >
            <form
              action="/listings/<%= listing._id %>/remove-from-cart"
              method="POST"
              class="mb-0"
            >
              <button
                type="submit"
                class="btn btn-link p-0"
                style="color: #dc3545"
                title="Remove from cart"
              >
                <i class="fa-solid fa-xmark fa-lg"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="alert alert-info mt-4">Your cart is empty.</div>
  <% } %>
</div>
