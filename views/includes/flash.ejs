<% if(success && success.length){ %>
    <!-- If you only check if(success), it will be true for an empty array ([]), so the alert would show even when there are no messages. -->
<!-- By checking success.length, you make sure there is at least one message to display. -->
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
        <%= success %>
    </div>
<% } %>
<!--for error messages, you can use the same logic as above -->
<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <%= error %>
    </div>
<% } %>